<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
    
    <!-- Tailwind CSS & Config -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              "primary": "#FF5722", // Core Orange
              "primary-hover": "#F4511E",
              "accent-blue": "#3B82F6",
              "accent-green": "#22C55E",
              "accent-purple": "#A855F7",
              "background-dark": "#050505", // Deep Black
              "surface-dark": "#0A0A0A",
              "surface-dark-lighter": "#171717",
              "border-dark": "#27272A",
            },
            fontFamily: {
              "display": ["Inter", "system-ui", "sans-serif"]
            },
            animation: {
              "fade-in-up": "fadeInUp 0.3s ease-out forwards",
            },
            keyframes: {
              fadeInUp: {
                "0%": { opacity: "0", transform: "translateY(5px)" },
                "100%": { opacity: "1", transform: "translateY(0)" },
              }
            }
          },
        },
      }
    </script>
    <style>
      /* Custom Scrollbar */
      ::-webkit-scrollbar { width: 6px; }
      ::-webkit-scrollbar-track { background: #050505; }
      ::-webkit-scrollbar-thumb { background: #333; border-radius: 4px; }
      ::-webkit-scrollbar-thumb:hover { background: #555; }
      
      body {
        background-color: #050505 !important;
        color: #ffffff;
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  
  <div class="min-h-screen bg-background-dark font-display text-gray-300 antialiased py-24 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
    
    <div class="max-w-xl w-full space-y-8 animate-fade-in-up">
        
        <!-- HEADER -->
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold text-white tracking-tight flex items-center justify-center gap-3">
                <span class="p-2 rounded-lg bg-surface-dark-lighter border border-border-dark text-primary">
                    <span class="material-icons-outlined">edit_note</span>
                </span>
                Edit Note
            </h2>
            <p class="mt-2 text-sm text-gray-500">Update your note details.</p>
        </div>
  
        <!-- FORM CONTAINER -->
        <div class="bg-surface-dark border border-border-dark rounded-xl shadow-2xl p-8 relative overflow-hidden">
            <!-- Background Decoration -->
            <div class="absolute top-0 right-0 -mr-16 -mt-16 w-32 h-32 rounded-full bg-primary/10 blur-2xl"></div>
  
            <form action="/notes/<%= note._id %>?_method=PUT" method="POST" class="space-y-6">
                
                <!-- TITLE -->
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-400 mb-1">Title <span class="text-red-500">*</span></label>
                    <input type="text" name="title" id="title" required value="<%= note.title %>"
                           class="w-full bg-surface-dark-lighter border border-border-dark rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-colors">
                </div>
  
                <!-- DESCRIPTION -->
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-400 mb-1">Description</label>
                    <textarea name="description" id="description" rows="3"
                              class="w-full bg-surface-dark-lighter border border-border-dark rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-colors"><%= note.description %></textarea>
                </div>
  
                <!-- DROPDOWNS GRID -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <!-- SUBJECT CUSTOM DROPDOWN -->
                    <div class="relative group z-30">
                        <label class="block text-sm font-medium text-gray-400 mb-1">Subject <span class="text-red-500">*</span></label>
                        <div class="custom-dropdown relative" id="subjectDropdown">
                             <button type="button" class="dropdown-btn w-full bg-surface-dark-lighter border border-border-dark hover:border-gray-600 rounded-lg px-4 py-3 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all group-hover:bg-white/5">
                                 <span class="selected-text text-gray-400">
                                    <%= note.subject ? note.subject.name : 'Select Subject' %>
                                 </span>
                                 <span class="material-icons-outlined text-gray-500 transition-transform duration-300">expand_more</span>
                             </button>
                             
                             <div class="dropdown-menu hidden absolute top-full left-0 w-full mt-1 bg-surface-dark-lighter border border-border-dark rounded-lg shadow-xl shadow-black/50 max-h-60 overflow-y-auto z-50">
                                 <% subjects.forEach(s => { %>
                                     <div class="dropdown-item px-4 py-2.5 hover:bg-primary/20 hover:text-white cursor-pointer text-gray-300 transition-colors border-l-2 border-transparent hover:border-primary" data-value="<%= s._id %>">
                                         <%= s.name %>
                                     </div>
                                 <% }) %>
                             </div>
                             <input type="hidden" name="subject" id="subjectInput" required value="<%= note.subject ? note.subject._id : '' %>">
                        </div>
                    </div>
  
                    <!-- COURSE CUSTOM DROPDOWN -->
                    <div class="relative group z-20">
                        <label class="block text-sm font-medium text-gray-400 mb-1">Course <span class="text-red-500">*</span></label>
                        <div class="custom-dropdown relative" id="courseDropdown">
                             <button type="button" class="dropdown-btn w-full bg-surface-dark-lighter border border-border-dark hover:border-gray-600 rounded-lg px-4 py-3 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all group-hover:bg-white/5">
                                 <span class="selected-text text-gray-400">
                                    <%= note.course || 'Select Course' %>
                                 </span>
                                 <span class="material-icons-outlined text-gray-500 transition-transform duration-300">expand_more</span>
                             </button>
                             <div class="dropdown-menu hidden absolute top-full left-0 w-full mt-1 bg-surface-dark-lighter border border-border-dark rounded-lg shadow-xl shadow-black/50 max-h-60 overflow-y-auto z-50">
                                 <% courses.forEach(c => { %>
                                     <div class="dropdown-item px-4 py-2.5 hover:bg-primary/20 hover:text-white cursor-pointer text-gray-300 transition-colors border-l-2 border-transparent hover:border-primary" data-value="<%= c %>"><%= c %></div>
                                 <% }) %>
                             </div>
                             <input type="hidden" name="course" id="courseInput" required value="<%= note.course %>">
                        </div>
                    </div>
  
                    <!-- SEMESTER CUSTOM DROPDOWN -->
                    <div class="relative group z-10">
                        <label class="block text-sm font-medium text-gray-400 mb-1">Semester <span class="text-red-500">*</span></label>
                         <div class="custom-dropdown relative" id="semesterDropdown">
                             <button type="button" class="dropdown-btn w-full bg-surface-dark-lighter border border-border-dark hover:border-gray-600 rounded-lg px-4 py-3 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all group-hover:bg-white/5">
                                 <span class="selected-text text-gray-400">
                                     <%= note.semester || 'Select Semester' %>
                                 </span>
                                 <span class="material-icons-outlined text-gray-500 transition-transform duration-300">expand_more</span>
                             </button>
                             <div class="dropdown-menu hidden absolute top-full left-0 w-full mt-1 bg-surface-dark-lighter border border-border-dark rounded-lg shadow-xl shadow-black/50 max-h-60 overflow-y-auto z-50">
                                 <% semester.forEach(s => { %>
                                     <div class="dropdown-item px-4 py-2.5 hover:bg-primary/20 hover:text-white cursor-pointer text-gray-300 transition-colors border-l-2 border-transparent hover:border-primary" data-value="<%= s %>"><%= s %></div>
                                 <% }) %>
                             </div>
                             <input type="hidden" name="semester" id="semesterInput" required value="<%= note.semester %>">
                        </div>
                    </div>

                    <!-- VISIBILITY CUSTOM DROPDOWN -->
                    <div class="relative group z-10">
                        <label class="block text-sm font-medium text-gray-400 mb-1">Visibility <span class="text-red-500">*</span></label>
                         <div class="custom-dropdown relative" id="visibilityDropdown">
                             <button type="button" class="dropdown-btn w-full bg-surface-dark-lighter border border-border-dark hover:border-gray-600 rounded-lg px-4 py-3 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all group-hover:bg-white/5">
                                 <span class="selected-text text-gray-400">
                                     <%= note.visibility ? note.visibility.charAt(0).toUpperCase() + note.visibility.slice(1) : 'Select Visibility' %>
                                 </span>
                                 <span class="material-icons-outlined text-gray-500 transition-transform duration-300">expand_more</span>
                             </button>
                             <div class="dropdown-menu hidden absolute top-full left-0 w-full mt-1 bg-surface-dark-lighter border border-border-dark rounded-lg shadow-xl shadow-black/50 max-h-60 overflow-y-auto z-50">
                                 <div class="dropdown-item px-4 py-2.5 hover:bg-primary/20 hover:text-white cursor-pointer text-gray-300 transition-colors border-l-2 border-transparent hover:border-primary" data-value="public">Public</div>
                                 <div class="dropdown-item px-4 py-2.5 hover:bg-primary/20 hover:text-white cursor-pointer text-gray-300 transition-colors border-l-2 border-transparent hover:border-primary" data-value="private">Private</div>
                             </div>
                             <input type="hidden" name="visibility" id="visibilityInput" required value="<%= note.visibility %>">
                        </div>
                    </div>
  
                </div>
  
                <!-- ACTION BUTTONS -->
                <div class="flex gap-4 pt-4">
                     <a href="/notes/<%= note._id %>" class="flex-1 py-3.5 px-4 rounded-lg border border-border-dark text-center text-sm font-bold text-gray-400 hover:text-white hover:bg-white/5 transition-all">
                        Cancel
                    </a>
                    <button type="submit" class="flex-1 py-3.5 px-4 rounded-lg shadow-lg text-sm font-bold text-white bg-gradient-to-r from-primary to-orange-600 hover:from-primary-hover hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all transform hover:-translate-y-0.5 hover:shadow-primary/25">
                        Update Note
                    </button>
                </div>
  
            </form>
            
        </div>
    </div>
  </div>
  
  <script>
    // --- CUSTOM DROPDOWN LOGIC ---
    function setupDropdown(id) {
        const wrapper = document.getElementById(id);
        const btn = wrapper.querySelector('.dropdown-btn');
        const menu = wrapper.querySelector('.dropdown-menu');
        const input = wrapper.querySelector('input[type="hidden"]');
        const selectedText = wrapper.querySelector('.selected-text');
        const arrow = wrapper.querySelector('.material-icons-outlined');
        
        // Ensure text color is correctly set if value exists
        if(input.value) {
            selectedText.classList.remove('text-gray-400');
            selectedText.classList.add('text-white');
        }

        btn.addEventListener('click', (e) => {
            e.stopPropagation();
            // Close others
            document.querySelectorAll('.custom-dropdown').forEach(d => {
                if (d.id !== id) {
                    d.querySelector('.dropdown-menu').classList.add('hidden');
                    d.querySelector('.material-icons-outlined').style.transform = 'rotate(0deg)';
                }
            });
            
            // Toggle current
            const isHidden = menu.classList.contains('hidden');
            if (isHidden) {
                menu.classList.remove('hidden');
                arrow.style.transform = 'rotate(180deg)';
            } else {
                menu.classList.add('hidden');
                arrow.style.transform = 'rotate(0deg)';
            }
        });
        
        wrapper.querySelectorAll('.dropdown-item').forEach(item => {
            item.addEventListener('click', (e) => {
                const val = item.getAttribute('data-value');
                const txt = item.innerText;
                
                input.value = val;
                selectedText.innerText = txt;
                selectedText.classList.remove('text-gray-400');
                selectedText.classList.add('text-white');
                
                menu.classList.add('hidden');
                arrow.style.transform = 'rotate(0deg)';
            });
        });
    }

    setupDropdown('subjectDropdown');
    setupDropdown('courseDropdown');
    setupDropdown('semesterDropdown');
    setupDropdown('visibilityDropdown');
    
    // Close dropdowns on outside click
    document.addEventListener('click', () => {
         document.querySelectorAll('.dropdown-menu').forEach(m => m.classList.add('hidden'));
         document.querySelectorAll('.custom-dropdown .material-icons-outlined').forEach(a => a.style.transform = 'rotate(0deg)');
    });
  </script>
