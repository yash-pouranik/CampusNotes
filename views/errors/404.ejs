<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet"/>
    
    <!-- Tailwind CSS & Config -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              "primary": "#FF5722",
              "primary-hover": "#F4511E",
              "background-dark": "#050505",
              "surface-dark": "#0A0A0A",
            },
            fontFamily: {
              "display": ["Inter", "system-ui", "sans-serif"]
            }
          },
        },
      }
    </script>
    <style>
      body {
        background-color: #050505 !important;
        color: #ffffff;
        font-family: 'Inter', sans-serif;
        overflow: hidden;
        cursor: default;
      }
      
      .parallax-layer {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
      }
      
      .star {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.8;
      }
      
      /* Ghost Float Animation */
      @keyframes floatGhost {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
      }
      .ghost-anim {
        animation: floatGhost 6s ease-in-out infinite;
      }
    </style>
  </head>
  
  <div class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden" id="scene">
    
    <!-- Parallax Background: Stars -->
    <div class="parallax-layer" data-speed="0.05" id="stars-layer">
        <!-- Stars generated by JS -->
    </div>
    
    <!-- Parallax Layer: Back Glow -->
    <div class="parallax-layer flex items-center justify-center p-0" data-speed="0.1">
        <div class="w-[500px] h-[500px] bg-primary/10 rounded-full blur-[120px]"></div>
    </div>
  
    <!-- Main Content -->
    <div class="relative z-10 text-center space-y-6 parallax-layer flex flex-col items-center justify-center" data-speed="0.2">
        
        <!-- Interactive Ghost -->
        <div class="ghost-anim mb-4 cursor-pointer group relative" id="ghost">
           <div class="text-9xl filter drop-shadow-[0_0_30px_rgba(255,87,34,0.5)] transition-transform duration-300 group-hover:scale-110">
               ðŸ‘»
           </div>
           <div class="absolute -top-4 -right-8 bg-surface-dark border border-gray-700 text-xs px-3 py-1 rounded-full text-gray-300 opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
               Boo! I'm lost too.
           </div>
        </div>
        
        <h1 class="text-8xl font-black text-transparent bg-clip-text bg-gradient-to-br from-white to-gray-600 tracking-tighter">
            404
        </h1>
        
        <div class="space-y-2 max-w-md mx-auto px-4">
            <h2 class="text-2xl font-bold text-white">Lost in Space?</h2>
            <p class="text-gray-400">
                The page you're looking for has drifted into a black hole.
            </p>
        </div>
  
        <div class="flex gap-4 pt-4 pointer-events-auto">
            <a href="/" class="px-8 py-3 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg shadow-lg shadow-primary/20 transition-all transform hover:-translate-y-1 hover:shadow-primary/40 flex items-center gap-2">
                <span class="material-icons-outlined">rocket_launch</span>
                Beam Me Up
            </a>
            
             <a href="javascript:history.back()" class="px-8 py-3 bg-surface-dark/50 hover:bg-surface-dark border border-gray-800 text-gray-300 font-bold rounded-lg transition-all hover:border-gray-600 flex items-center gap-2">
                <span class="material-icons-outlined">undo</span>
                Go Back
            </a>
        </div>
    </div>
    
    <!-- Interactive Mouse Follower (Spotlight) -->
    <div id="spotlight" class="pointer-events-none fixed w-64 h-64 bg-white/5 rounded-full blur-3xl transform -translate-x-1/2 -translate-y-1/2 opacity-0 transition-opacity duration-500"></div>
  
  </div>
  
  <script>
    // 1. Generate Stars
    const starsLayer = document.getElementById('stars-layer');
    for(let i=0; i<50; i++) {
        const star = document.createElement('div');
        star.className = 'star';
        star.style.width = Math.random() * 3 + 'px';
        star.style.height = star.style.width;
        star.style.left = Math.random() * 100 + '%';
        star.style.top = Math.random() * 100 + '%';
        star.style.opacity = Math.random();
        starsLayer.appendChild(star);
    }
  
    // 2. Parallax Effect
    document.addEventListener('mousemove', (e) => {
        const layers = document.querySelectorAll('.parallax-layer');
        const x = (window.innerWidth - e.pageX * 2) / 100;
        const y = (window.innerHeight - e.pageY * 2) / 100;
        
        // Spotlight
        const spotlight = document.getElementById('spotlight');
        spotlight.style.opacity = 1;
        spotlight.style.left = e.pageX + 'px';
        spotlight.style.top = e.pageY + 'px';
  
        layers.forEach(layer => {
            const speed = layer.getAttribute('data-speed');
            const xPos = x * speed * 20; // Amplifier
            const yPos = y * speed * 20; 
            layer.style.transform = `translateX(${xPos}px) translateY(${yPos}px)`;
        });
        
        // Ghost Eyes Follow (Simple Rotation tilt)
        const ghost = document.getElementById('ghost');
        const box = ghost.getBoundingClientRect();
        const ghostX = box.left + box.width / 2;
        const ghostY = box.top + box.height / 2;
        
        const deltaX = e.pageX - ghostX;
        const deltaY = e.pageY - ghostY;
        const angle = Math.atan2(deltaY, deltaX) * 180 / Math.PI;
        
        // Slight rotation towards mouse
        // ghost.style.transform = `rotate(${angle / 10}deg)`; 
    });
  </script>
