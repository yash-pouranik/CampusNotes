  <!-- Main CSS -->
  <link rel="stylesheet" href="/css/styles.css?v=5" />
  <link rel="stylesheet" href="/css/footer_nav.css?v=3" />
  <link rel="stylesheet" href="/css/theme.css?v=1">
  <link rel="stylesheet" href="/css/ai-chat.css?v=1">

  <!-- SEO Meta -->
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'A student-driven platform for sharing notes, study materials & academic resources.' %>">

  <!-- AOS -->
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Google Tag -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-VQX25X9M70"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-VQX25X9M70');
  </script>

  <!-- Axios (Global) - Moved to Head for dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js"></script>

  <% if (typeof showAds === 'undefined' || showAds !== false) { %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6173181732924072" crossorigin="anonymous"></script>
  <% } %>
</head>

<body>

  <%- include("partials/navbar") %>

  <!-- PAGE WRAPPER FIXES BACKGROUND CUTTING ISSUE -->
  <main class="page-wrapper">
    
    <% if (success_msg.length) { %>
      <div class="flash flash-success"><%= success_msg %></div>
    <% } %>

    <% if (error_msg.length) { %>
      <div class="flash flash-error"><%- error_msg %></div>
    <% } %>

    <%- body %>
  </main>

  <%- include("partials/footer") %>

  <!-- Scripts -->
  <script src="/js/navbar.js"></script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init({ duration: 800, once: true });</script>

  <script>AOS.init({ duration: 800, once: true });</script>

  <!-- AI Chat Widget HTML -->
  <div id="ai-chat-widget" style="display: none;"> <!-- Hidden by default, shown via JS if user is logged in -->
    <div class="ai-chat-toggle" onclick="toggleChat()">
      <i class="fa-solid fa-dice"></i>
    </div>

    <div class="ai-chat-container" id="chat-container">
      <div class="ai-chat-header">
        <h4><i class="fa-solid fa-sparkles"></i> Campus AI</h4>
        <div style="display:flex; gap:10px;">
             <button class="ai-chat-close" onclick="maximizeChat()" title="Maximize / History"><i class="fa-solid fa-up-right-from-square"></i></button>
             <button class="ai-chat-close" onclick="toggleChat()"><i class="fa-solid fa-xmark"></i></button>
        </div>
      </div>

      <div class="ai-chat-messages" id="chat-messages">
        <div class="message system">
          Hello! Click the <strong>+</strong> button to select a note.
          <br><br>
          <small>Unsaved chat. Click <i class="fa-solid fa-up-right-from-square"></i> to save & maximize.</small>
        </div>
      </div>

      <div class="ai-chat-input-area">
        <!-- Selected Note Indicator -->
        <div class="selected-note-pill" id="selected-note-pill">
          <i class="fa-regular fa-file-lines"></i>
          <span id="selected-note-title">Note Title</span>
          <i class="fa-solid fa-xmark remove-note-btn" onclick="clearNoteSelection()"></i>
        </div>

        <!-- Dropdown -->
        <div class="notes-dropdown" id="notes-dropdown">
          <div class="dropdown-search">
             <input type="text" id="note-search" placeholder="Search notes..." onkeyup="filterNotes()">
          </div>
          <div id="notes-list-container">
             <div class="note-item loading">Loading notes...</div>
          </div>
        </div>

        <div class="input-wrapper">
          <button class="plus-btn" onclick="toggleNoteDropdown()" title="Select a note">
            <i class="fa-solid fa-plus"></i>
          </button>
          <input type="text" class="chat-input" id="chat-input" placeholder="Ask a question..." onkeypress="handleEnter(event)">
          <button class="send-btn" id="send-btn" onclick="sendMessage()">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- AI Chat Logic -->
  <script>
    const chatWidget = document.getElementById('ai-chat-widget');
    const chatContainer = document.getElementById('chat-container');
    const notesDropdown = document.getElementById('notes-dropdown');
    const notesListContainer = document.getElementById('notes-list-container');
    const selectedNotePill = document.getElementById('selected-note-pill');
    const selectedNoteTitle = document.getElementById('selected-note-title');
    const chatMessages = document.getElementById('chat-messages');
    const chatInput = document.getElementById('chat-input');
    const sendBtn = document.getElementById('send-btn');
    
    let currentNoteId = null;
    let notesLoaded = false;
    let allNotes = [];
    const converter = new showdown.Converter();

    // Check if user is logged in (simple check via existing EJS variable or DOM)
    // We can check if 'currUser' exists in the page. 
    // Since this is a layout file, we can use EJS to conditionally render the widget.
    // But for now, let's assume we show it, and if API fails (401), we handle it.
    // Actually, let's use EJS to only show if user is logged in.
    
    <% if (typeof currUser !== 'undefined' && currUser) { %>
        document.getElementById('ai-chat-widget').style.display = 'block';
    <% } %>

    function toggleChat() {
        chatContainer.classList.toggle('active');
        if (chatContainer.classList.contains('active')) {
            // Focus input
            setTimeout(() => chatInput.focus(), 300);
        }
    }

    async function toggleNoteDropdown() {
        const isVisible = notesDropdown.style.display === 'block';
        if (isVisible) {
            notesDropdown.style.display = 'none';
        } else {
            notesDropdown.style.display = 'block';
            if (!notesLoaded) {
                await fetchNotes();
            }
            document.getElementById('note-search').focus();
        }
    }

    async function fetchNotes() {
        try {
            const res = await axios.get('/api/notes/list');
            allNotes = res.data;
            renderNotes(allNotes);
            notesLoaded = true;
        } catch (error) {
            console.error("Error fetching notes:", error);
            notesListContainer.innerHTML = '<div class="note-item error">Could not load notes.</div>';
        }
    }

    function renderNotes(notes) {
        if (notes.length === 0) {
            notesListContainer.innerHTML = '<div class="note-item">No notes found.</div>';
            return;
        }
        
        notesListContainer.innerHTML = notes.map(note => `
            <div class="note-item" onclick="selectNote('${note._id}', '${escapeHtml(note.title)}')">
                <i class="fa-regular fa-file-lines" style="margin-right: 8px; color: #6366f1;"></i>
                ${note.title}
            </div>
        `).join('');
    }

    function filterNotes() {
        const query = document.getElementById('note-search').value.toLowerCase();
        const filtered = allNotes.filter(n => n.title.toLowerCase().includes(query));
        renderNotes(filtered);
    }

    function selectNote(id, title) {
        currentNoteId = id;
        selectedNoteTitle.textContent = title;
        selectedNotePill.style.display = 'flex';
        notesDropdown.style.display = 'none';
        
        // Add system message
        addMessage('system', `Context set to: <strong>${title}</strong>`);
    }

    function clearNoteSelection() {
        currentNoteId = null;
        selectedNotePill.style.display = 'none';
        addMessage('system', 'Note context cleared.');
    }

    function handleEnter(e) {
        if (e.key === 'Enter') sendMessage();
    }

    function maximizeChat() {
        // Collect current messages
        const msgs = [];
        const msgElements = chatMessages.querySelectorAll('.message');
        msgElements.forEach(el => {
            if (el.classList.contains('system')) return; // Skip system messages
            
            const role = el.classList.contains('user') ? 'user' : 'ai';
            // We need to get TEXT content. 
            // Since we render HTML in widget, getting innerText is safer slightly but might lose formatting.
            // For persistence, let's grab innerHTML or innerText. Data model expects 'content'.
            // Simple approach: innerText for now to keep it clean.
            const content = el.innerText.trim();
            if(content && content !== 'Thinking...') {
                 msgs.push({ role, content });
            }
        });

        // Prepare payload
        const payload = { 
            noteId: currentNoteId || null, 
            messages: msgs 
        };

        // Create chat with history
        axios.post('/api/chat/new', payload)
            .then(res => {
                if(res.data.success) {
                    window.location.href = `/chat?id=${res.data.chatId}`;
                }
            })
            .catch(err => {
                if (err.response && err.response.status === 403) {
                    alert(err.response.data.error); 
                    window.location.href = '/chat';
                } else {
                    console.error(err);
                    window.location.href = '/chat';
                }
            });
    }


    async function sendMessage() {
        const text = chatInput.value.trim();
        if (!text) return;

        if (!currentNoteId) {
            alert("To start a chat, please select a note first.");
            return;
        }

        // --- CHANGE: If user sends a message in widget, we AUTO-MAXIMIZE if they want persistence?
        // User asked: "chat will start from widget then there is a icon to maximize"
        // IMPLIED: Widget is temporary/quick. Maximize is for full session.
        // Let's keep the widget as "Quick Ask" (stateless API) as implemented before, 
        // BUT add the maximize button to "Move" to a full session.
        // So I will NOT change sendMessage logic here to save to DB, 
        // because that would double the complexity (syncing widget state to DB).
        // The user explicitly said: "when maximizing... redirect to new ejs... store all chats".
        
        // Add user message
        addMessage('user', text);
        chatInput.value = '';
        sendBtn.disabled = true;

        // Add loading
        const loadingId = addMessage('ai', '<i class="fa-solid fa-circle-notch fa-spin"></i> Thinking...');

        try {
            const response = await axios.post(`/api/notes/${currentNoteId}/ask`, {
                question: text
            });
            
            // Replace loading with answer
            const answerHtml = converter.makeHtml(response.data.answer);
            updateMessage(loadingId, answerHtml);
            
        } catch (error) {
            console.error(error);
            updateMessage(loadingId, 'Sorry, something went wrong. Please try again.');
        } finally {
            sendBtn.disabled = false;
        }
    }

    function addMessage(type, html) {
        const div = document.createElement('div');
        div.className = `message ${type}`;
        div.innerHTML = html;
        div.id = 'msg-' + Date.now();
        chatMessages.appendChild(div);
        chatMessages.scrollTop = chatMessages.scrollHeight;
        return div.id;
    }

    function updateMessage(id, html) {
        const div = document.getElementById(id);
        if (div) {
            div.innerHTML = html;
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    }

    function escapeHtml(text) {
        return text
            .replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")
            .replace(/"/g, "&quot;")
            .replace(/'/g, "&#039;");
    }
    
    // Close dropdown if clicked outside
    document.addEventListener('click', (e) => {
        if (!e.target.closest('.notes-dropdown') && !e.target.closest('.plus-btn')) {
            notesDropdown.style.display = 'none';
        }
    });

  </script>

</body>
</html>
