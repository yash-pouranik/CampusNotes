  <link rel="canonical" href="<%= typeof currentUrl !== 'undefined' ? currentUrl : 'https://campusnotes.bitbros.in' %>" />

  <title><%= typeof title !== 'undefined' ? title : 'Campus Notes - SVVV Notes' %></title>

  <!-- Fonts -->
