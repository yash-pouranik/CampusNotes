<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet"/>
    
    <!-- Tailwind CSS & Config -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              "primary": "#FF5722", // Core Orange
              "primary-hover": "#F4511E",
              "accent-blue": "#3B82F6",
              "accent-green": "#22C55E",
              "accent-purple": "#A855F7",
              "background-dark": "#050505", // Deep Black
              "surface-dark": "#0A0A0A",
              "surface-dark-lighter": "#171717",
              "border-dark": "#27272A",
            },
            fontFamily: {
              "display": ["Inter", "system-ui", "sans-serif"]
            },
            animation: {
              "fade-in-up": "fadeInUp 0.5s ease-out forwards",
            },
            keyframes: {
              fadeInUp: {
                "0%": { opacity: "0", transform: "translateY(10px)" },
                "100%": { opacity: "1", transform: "translateY(0)" },
              }
            }
          },
        },
      }
    </script>
    <style>
      ::-webkit-scrollbar { width: 6px; }
      ::-webkit-scrollbar-track { background: #050505; }
      ::-webkit-scrollbar-thumb { background: #333; border-radius: 4px; }
      ::-webkit-scrollbar-thumb:hover { background: #555; }
      
      body {
        background-color: #050505 !important;
        color: #ffffff;
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  
  <div class="min-h-screen bg-background-dark font-display text-gray-300 antialiased py-24 px-4 sm:px-6 lg:px-8">
    
    <div class="max-w-7xl mx-auto space-y-8 animate-fade-in-up">
        
        <!-- HEADER -->
        <div class="flex flex-col md:flex-row justify-between items-center gap-4 border-b border-border-dark pb-6">
            <div>
                <h2 class="text-3xl font-bold text-white tracking-tight flex items-center gap-3">
                    <span class="p-2 rounded-lg bg-surface-dark-lighter border border-border-dark text-primary">
                        <span class="material-icons-outlined">admin_panel_settings</span>
                    </span>
                    Verify Notes
                </h2>
                <p class="mt-2 text-sm text-gray-500">Review pending submissions from students.</p>
            </div>
            <div class="bg-surface-dark-lighter px-4 py-2 rounded-lg border border-border-dark flex items-center gap-2">
                 <span class="w-2.5 h-2.5 rounded-full bg-yellow-500 animate-pulse"></span>
                 <span class="text-white font-bold"><%= unverifiedNotes.length %></span>
                 <span class="text-gray-500 text-sm">Pending</span>
            </div>
        </div>
  
        <!-- GRID -->
        <% if (unverifiedNotes.length === 0) { %>
            <!-- EMPTY STATE -->
            <div class="flex flex-col items-center justify-center py-20 bg-surface-dark border border-border-dark rounded-xl border-dashed">
                <div class="w-20 h-20 bg-surface-dark-lighter rounded-full flex items-center justify-center mb-4">
                    <span class="material-icons-outlined text-4xl text-green-500">check_circle</span>
                </div>
                <h3 class="text-xl font-bold text-white">All Caught Up!</h3>
                <p class="text-gray-500 mt-2">There are no notes pending verification.</p>
                <a href="/explore" class="mt-6 px-6 py-2 bg-primary hover:bg-primary-hover text-white rounded-lg transition-colors text-sm font-medium">
                    Go to Explore
                </a>
            </div>
        <% } else { %>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% unverifiedNotes.forEach(note => { %>
                    <div class="bg-surface-dark border border-border-dark rounded-xl overflow-hidden hover:border-primary/50 transition-colors group flex flex-col">
                        
                        <!-- CARD HEADER -->
                        <div class="p-5 border-b border-border-dark/50 bg-surface-dark-lighter/50 flex justify-between items-start">
                             <div class="flex items-center gap-3">
                                 <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center text-white font-bold border border-border-dark">
                                     <%= note.uploadedBy?.username?.charAt(0).toUpperCase() || 'U' %>
                                 </div>
                                 <div>
                                     <h4 class="text-sm font-bold text-white"><%= note.uploadedBy?.username || 'Unknown' %></h4>
                                     <span class="text-xs text-gray-500"><%= note.createdAt ? new Date(note.createdAt).toLocaleDateString() : 'Just now' %></span>
                                 </div>
                             </div>
                             <a href="/notes/<%= note._id %>" target="_blank" class="p-2 hover:bg-white/10 rounded-lg text-primary transition-colors tooltip" title="Preview Note">
                                 <span class="material-icons-outlined text-lg">open_in_new</span>
                             </a>
                        </div>
  
                        <!-- CARD BODY -->
                        <div class="p-5 flex-1 space-y-4">
                            <div>
                                <h3 class="text-lg font-bold text-white line-clamp-2 leading-tight mb-2 group-hover:text-primary transition-colors"><%= note.title %></h3>
                                <div class="flex flex-wrap gap-2">
                                     <span class="px-2 py-0.5 rounded textxs font-medium bg-blue-900/30 text-blue-400 border border-blue-500/20">
                                         <%= note.subject?.name || 'No Subject' %>
                                     </span>
                                     <span class="px-2 py-0.5 rounded textxs font-medium bg-purple-900/30 text-purple-400 border border-purple-500/20">
                                         <%= note.semester || 'N/A' %>
                                     </span>
                                </div>
                            </div>
                            
                            <div class="text-sm text-gray-400 bg-surface-dark-lighter p-3 rounded-lg border border-border-dark/50">
                                <div class="flex justify-between mb-1">
                                    <span>Course:</span>
                                    <span class="text-white"><%= note.course || 'N/A' %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span>File:</span>
                                    <span class="text-white truncate max-w-[150px]"><%= note.fileUrl ? 'PDF Document' : 'Unknown' %></span>
                                </div>
                            </div>
                        </div>
  
                        <!-- CARD FOOTER (ACTIONS) -->
                        <div class="p-4 border-t border-border-dark bg-surface-dark-lighter/20 flex gap-3">
                            <!-- REJECT FORM -->
                            <form action="/admin/verify-notes" method="POST" class="flex-1">
                                <input type="hidden" name="noteId" value="<%= note._id %>">
                                <input type="hidden" name="action" value="reject">
                                <button type="submit" class="w-full py-2.5 rounded-lg border border-red-500/30 text-red-400 hover:bg-red-500/10 hover:text-red-300 font-medium text-sm transition-all flex items-center justify-center gap-2">
                                    <span class="material-icons-outlined text-base">close</span> Reject
                                </button>
                            </form>
  
                            <!-- ACCEPT FORM -->
                            <form action="/admin/verify-notes" method="POST" class="flex-1">
                                <input type="hidden" name="noteId" value="<%= note._id %>">
                                <input type="hidden" name="action" value="accept">
                                <button type="submit" class="w-full py-2.5 rounded-lg bg-green-600 hover:bg-green-500 text-white font-bold text-sm shadow-lg shadow-green-900/20 transition-all flex items-center justify-center gap-2 transform hover:-translate-y-0.5">
                                    <span class="material-icons-outlined text-base">check</span> Accept
                                </button>
                            </form>
                        </div>
  
                    </div>
                <% }) %>
            </div>
  
        <% } %>
    </div>
  </div>
