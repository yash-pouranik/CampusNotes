<style>
  /* ========== VERIFY PAGE (Dark Neon Theme) ========== */

.verify-notes-container {
  max-width: var(--maxw);
  margin: 60px auto;
  padding: 20px;
}

.note-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 20px;
}

/* Each card */
.note-card {
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border-radius: var(--card-radius);
  padding: 20px;
  border: 1px solid rgba(255,255,255,0.05);
  box-shadow: 0 6px 18px rgba(0,0,0,0.5);
  transition: transform .2s var(--smooth);
}

.note-card:hover {
  transform: translateY(-6px) scale(1.01);
}

.note-card h3 {
  margin: 0 0 8px;
  font-size: 1.25rem;
  color: #eaf7ff;
}

.note-card p {
  color: var(--muted);
  font-size: 0.9rem;
  margin: 6px 0;
}

/* VIEW LINK */
.view-btn-mini {
  display: inline-block;
  padding: 8px 14px;
  border-radius: 8px;
  background: #0d182a;
  border: 1px solid var(--accent);
  color: var(--accent);
  font-weight: 600;
  margin-bottom: 12px;
  transition: .2s;
}
.view-btn-mini:hover {
  transform: translateY(-2px);
  box-shadow: 0 0 14px rgba(0,255,213,0.25);
}

/* ACCEPT BUTTON */
.accept-btn {
  background: rgba(0,255,213,0.1);
  border: 1px solid var(--accent);
  color: var(--accent);
  padding: 8px 16px;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  margin-right: 8px;
  transition: .2s;
}
.accept-btn:hover {
  background: rgba(0,255,213,0.22);
  box-shadow: 0 0 12px rgba(0,255,213,0.35);
}

/* REJECT BUTTON */
.reject-btn {
  background: rgba(255,60,60,0.1);
  border: 1px solid #ff4444;
  color: #ff8888;
  padding: 8px 16px;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: .2s;
}
.reject-btn:hover {
  background: rgba(255,60,60,0.2);
  box-shadow: 0 0 12px rgba(255,60,60,0.3);
}

/* No notes message */
.verify-notes-container > p {
  text-align: center;
  font-size: 1.2rem;
  color: var(--accent);
  font-weight: 600;
  padding-top: 40px;
}

</style>



<div class="verify-notes-container">
  <% if (unverifiedNotes.length === 0) { %>
    <p>ðŸŽ‰ All notes are verified!</p>
  <% } else { %>
    <div class="note-grid">
      <% unverifiedNotes.forEach(note => { %>
        <div class="note-card">
          <h3><%= note.title %></h3>
          <p><strong>Subject:</strong> <%= note.subject.name %></p>
          <p><strong>Uploaded by:</strong> <%= note.uploadedBy?.username || 'Unknown' %></p>

          <!-- View Button -->
          <a href="/notes/<%= note._id %>" class="view-btn-mini">View</a>

          <!-- Accept Form -->
          <form method="POST" action="/admin/verify-notes">
            <input type="hidden" name="noteId" value="<%= note._id %>">
            <input type="hidden" name="action" value="accept">
            <button type="submit" class="accept-btn">Accept</button>
          </form>

          <!-- Reject Form -->
          <form method="POST" action="/admin/verify-notes">
            <input type="hidden" name="noteId" value="<%= note._id %>">
            <input type="hidden" name="action" value="reject">
            <button type="submit" class="reject-btn">Reject</button>
          </form>
        </div>
        
      <% }) %>
    </div>
  <% } %>
</div>
