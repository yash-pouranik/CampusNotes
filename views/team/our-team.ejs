<link rel="stylesheet" href="/css/our-team.css">

<section class="team-section">

  <div class="section-header">
    <h1>Meet Our Team</h1>
    <p>Passionate minds behind CampusNotes</p>
  </div>

  <div class="team-container">
    <% teamMembers.forEach(member => { %>

      <div class="team-card">

        <div class="avatar-wrapper">
          <img src="<%= member.avatar %>" alt="<%= member.name %>" class="avatar">
        </div>

        <h2 class="member-name">
          <%= member.name %>
          <% if (member.roles.isModerator) { %>
            <img src="/images/blueCheckmark.svg" class="role-icon">
          <% } else if (member.roles.isDev) { %>
            <img src="/images/icons8-checkmark.svg" class="role-icon">
          <% } else if (member.verification?.verified) { %>
            <span class="verified-icon">âœ”</span>
          <% } %>
        </h2>

        <p class="username">@<%= member.username %></p>

        <p class="role">
          <%= member.roles.isDev 
              ? "Developer" 
              : member.roles.isModerator 
                ? "Moderator" 
                : "Team Member" 
          %>
        </p>

       

        <div class="social-links">
          <% if (member.socialLinks?.linkedin) { %>
            <a href="<%= member.socialLinks.linkedin %>" target="_blank" class="social-link linkedin">
              <i class="fa-brands fa-linkedin"></i>
            </a>
          <% } %>

          <% if (member.socialLinks?.github) { %>
            <a href="<%= member.socialLinks.github %>" target="_blank" class="social-link github">
              <i class="fa-brands fa-github"></i>
            </a>
          <% } %>
        </div>

      </div>

    <% }) %>
  </div>
</section>
