<section class="contributors-section">
  <div class="section-header" data-aos="fade-up">
    <h2 class="section-title">Top Contributors</h2>
    <p class="section-desc">Hall of fame for our most active students</p>
  </div>

  <div class="contributors-grid">
    <% if (topContributors && topContributors.length) { %>
      <% topContributors.forEach((contributor, index) => { %>
        <div class="contributor-card" data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
          <div class="rank-badge">#<%= index + 1 %></div>
          <div class="contributor-avatar">
            <% 
              let avatarUrl = contributor.avatar || '/images/dummy_profile.avif';
              if(avatarUrl.includes('cloudinary')) {
                avatarUrl = avatarUrl.replace('/upload/', '/upload/w_100,h_100,c_fill,q_auto,f_auto/');
              }
            %>
            <img src="<%= avatarUrl %>" alt="<%= contributor.name %>" loading="lazy">
          </div>
          <div class="contributor-info">
            <h4>
              <%= contributor.name || contributor.username %>
              <% if (contributor.roles.isModerator) { %>
                <i class="fa-solid fa-shield-halved text-primary" title="Moderator"></i>
              <% } else if (contributor.roles.isDev) { %>
                <i class="fa-solid fa-code text-accent" title="Developer"></i>
              <% } else if (contributor.verified) { %>
                <i class="fa-solid fa-circle-check text-success" title="Verified"></i>
              <% } %>
            </h4>
            <p><%= contributor.uploaded %> Uploads</p>
            <span class="course-pill"><%= contributor.course || 'Student' %></span>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="empty-state">
        <p>No contributors yet. Be the first!</p>
      </div>
    <% } %>
  </div>
</section>

