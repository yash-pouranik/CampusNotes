      </a>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% if (topContributors && topContributors.length) { %>
        <% topContributors.forEach((contributor, index) => { %>
          <% 
            let avatarUrl = contributor.avatar || '/images/dummy_profile.avif';
            if(avatarUrl.includes('cloudinary')) {
              avatarUrl = avatarUrl.replace('/upload/', '/upload/w_100,h_100,c_fill,q_auto,f_auto/');
            }
          %>
          <div class="saas-card p-6 rounded-xl flex items-center gap-4 cursor-pointer" onclick="window.location.href='/profile/<%= contributor._id %>'">
            <img alt="<%= contributor.name %>" class="w-12 h-12 rounded-full border border-border-dark object-cover" src="<%= avatarUrl %>"/>
            <div>
              <h4 class="text-white font-bold text-sm"><%= contributor.name || contributor.username %></h4>
              <p class="text-primary text-xs font-semibold mb-0.5">
                <%= contributor.course || 'Student' %>
                <% if (contributor.roles && contributor.roles.isVerified) { %>
                  <i class="fa-solid fa-circle-check ml-1 text-accent-blue" style="font-size:10px;"></i>
                <% } %>
              </p>
              <p class="text-gray-500 text-xs"><%= contributor.uploaded %> Uploads</p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-4 text-center text-gray-500 py-8">
          No contributors yet. Be the first to upload!
        </div>
      <% } %>
    </div>
  </div>
</section>

