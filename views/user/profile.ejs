<link rel="stylesheet" href="/css/profile.css" />

<div class="profile-page">

  <!-- ðŸŒŸ PROFILE HEADER CARD -->
  <section class="profile-card">

    <div class="profile-left">
      <div class="profile-avatar-wrapper">
        <img src="<%= user.avatar %>" class="profile-avatar" />

        <% if(currUser && currUser._id.toString() === user._id.toString()) { %>
          <button class="avatar-edit-btn" onclick="openAvatarModal()">âœŽ</button>
        <% } %>
      </div>
    </div>

    <div class="profile-right">

      <div class="profile-name-line">
        <h2><%= user.name %></h2>

        <% if (user.roles.isModerator) { %>
          <img src="/images/blueCheckmark.svg" class="verify-icon">
        <% } else if (user.roles.isDev) { %>
          <img src="/images/icons8-checkmark.svg" class="verify-icon">
        <% } else if (user.verification.verified) { %>
          <span class="text-verified">âœ”</span>
        <% } %>
      </div>

      <p class="profile-email"><%= user.email %></p>

      <% if(currUser && currUser._id.toString() === user._id.toString()) { %>
      <a href="/profile/<%= user._id %>/edit" class="profile-edit-btn">Edit Profile</a>
      <% } %>

      <div class="profile-stats">
        <div class="stat-box">Uploads: <strong><%= user.uploaded %></strong></div>
      </div>

      <div class="social-links">
        <p>ðŸ”— LinkedIn: 
          <% if (user.socialLinks?.linkedin) { %>
            <a href="<%= user.socialLinks.linkedin %>" target="_blank">View</a>
          <% } else { %> Not added <% } %>
        </p>

        <p>ðŸ’» GitHub:
          <% if (user.socialLinks?.github) { %>
            <a href="<%= user.socialLinks.github %>" target="_blank">View</a>
          <% } else { %> Not added <% } %>
        </p>
      </div>

    </div>
  </section>

  <!-- â­ Uploaded Notes Section -->
  <h2 class="note-section-title">Uploaded Notes</h2>

  <div class="note-grid">
    <% notes.forEach(note => { %>

      <article class="card">

        <div class="card-top">
          <div>
            <h3 class="title"><%= note.title %></h3>
            <div class="subtitle">
              <%= note.subject?.name %> â€¢ <%= note.course %>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div style="display:flex; gap:8px;">
            <div class="tag"><i class="fa-solid fa-download"></i> <strong><%= note.downloadCount %></strong></div>
            <div class="tag"><strong><%= note.createdAt?.toDateString() %></strong></div>
          </div>
        </div>

        <div class="card-footer">
          <a class="view-btn" href="/notes/<%= note._id %>">View</a>

         
        </div>

      </article>

    <% }) %>
  </div>

</div>


<!-- Avatar Modal -->
<div id="avatarModal" class="avatar-modal" style="display:none;">
  <div class="avatar-modal-content">
    <h3>Edit Profile Picture</h3>
    <img src="<%= user.avatar %>" class="modal-avatar">

    <form action="/profile/avatar?_method=PUT" method="POST" enctype="multipart/form-data">
      <input type="file" name="avatar" accept="image/*" required>
      <button class="profile-edit-btn">Upload</button>
    </form>

    <div class="modal-close" onclick="closeAvatarModal()">Cancel</div>
  </div>
</div>

<script>
function openAvatarModal(){ document.getElementById("avatarModal").style.display="flex"; }
function closeAvatarModal(){ document.getElementById("avatarModal").style.display="none"; }
</script>
