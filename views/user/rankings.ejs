<style>
  /* ===========================
   DARK NEON ‚Äî RANKING PAGE
   =========================== */

.ranking-section {
  padding: 70px 20px;
  text-align: center;
  color: var(--text);
}

.ranking-title {
  font-size: 2.4rem;
  font-weight: 700;
  color: var(--accent);
  margin-bottom: 8px;
}

.ranking-sub {
  color: var(--muted);
  font-size: 1rem;
  margin-bottom: 40px;
}

/* MAIN GRID */
.ranking-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 26px;
}

/* CARD */
.rank-card {
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border-radius: 18px;
  border: 1px solid rgba(255,255,255,0.05);
  padding: 10px 10px;

  display: flex;
  align-items: center;
  gap: 5px;

  box-shadow: 0 6px 20px rgba(0,0,0,0.35);
  transition: 0.2s ease;
}

.rank-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,255,213,0.15);
}

/* LEFT RANK NUMBER */
.rank-number {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--accent);
  width: 48px;
  text-align: center;
}

/* AVATAR */
.rank-avatar {
  width: 54px;
  height: 54px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--accent);
}

/* USER INFO */
.rank-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: left;
  gap: 2px;
}

/* NAME */
.rank-name {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text);
  display: flex;
  align-items: center;
  gap: 6px;
}

/* Username */
.rank-username {
  font-size: 0.85rem;
  color: var(--muted);
}

/* Course */
.rank-course {
  font-size: 0.75rem;
  color: #9ca3af;
}

/* Upload count */
.rank-uploads {
  text-align: right;
}

.rank-uploads span {
  font-size: 1.7rem;
  font-weight: 700;
  color: #19ffb3;
}

.rank-uploads small {
  display: block;
  font-size: 0.75rem;
  color: var(--muted);
}

/* MOBILE FIX */
@media (max-width: 430px) {
  .rank-card {
    flex-direction: column;
    text-align: center;
    gap: 12px;
    padding: 10px;
  }
  .rank-info {
    text-align: center;
    align-items: center;
  }
  .rank-name {
    justify-content: center;
  }
  .rank-uploads {
    text-align: center;
    width: 100%;
  }
}

</style>




<section class="ranking-section">
  <h1 class="ranking-title">üèÜ Top Contributors</h1>
  <p class="ranking-sub">Based on number of notes uploaded</p>

  <div class="ranking-container">
    <% topUsers.forEach((u, i) => { %>
      <div class="rank-card">

        <div class="rank-number">#<%= i+1 %></div>

        <img src="<%= u.avatar %>" class="rank-avatar" />

        <div class="rank-info">
          <div class="rank-name">
            <%= u.name || u.username %>
            <% if (u.roles.isModerator) { %>
              <img src="/images/blueCheckmark.svg" width="18">
            <% } else if (u.roles.isDev) { %>
              <img src="/images/icons8-checkmark.svg" width="18">
            <% } else if (u.verification?.verified) { %>
              <span style="color:#19ffb3;">‚úî</span>
            <% } %>
          </div>

          <div class="rank-username">@<%= u.username %></div>
          <div class="rank-course"><%= u.course || '-' %></div>
        </div>

        <div class="rank-uploads">
          <span><%= u.uploaded %></span>
          <small>Uploads</small>
        </div>

      </div>
    <% }) %>
  </div>
</section>
