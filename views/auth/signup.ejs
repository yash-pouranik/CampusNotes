<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Signup - CampusNotes</title>

  <!-- FontAwesome (for dropdown arrow icons if needed) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>

  /* ==========================
     AUTH — DARK NEON THEME
     ========================== */

  .auth-section {
    max-width: 460px;
    margin: 40px auto;
    padding: 32px;
    border-radius: 16px;

    background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.015));
    border: 1px solid rgba(255,255,255,0.05);
    box-shadow: 0 8px 30px rgba(0,0,0,0.45);
    backdrop-filter: blur(14px) saturate(140%);

    text-align: center;
    color: var(--text);
  }

  h2 {
    font-size: 1.6rem;
    margin-bottom: 22px;
    font-weight: 700;
    color: var(--accent);
  }

  p {
    color: var(--muted);
    margin: 18px 0;
    font-size: 0.95rem;
  }

  /* ---------- INPUTS ---------- */
  .auth-section input {
    width: 100%;
    padding: 12px 14px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.08);
    background: rgba(255,255,255,0.02);
    color: var(--text);
    font-size: 1rem;
    transition: 0.2s;
    margin-bottom: 15px;
  }

  .auth-section input:focus {
    border-color: rgba(0,255,213,0.35);
    box-shadow: 0 0 12px rgba(0,255,213,0.25);
    outline: none;
  }

  /* ---------- BUTTON ---------- */
  .auth-section button {
    margin-top: 10px;
    padding: 12px;
    background: #0d182a;
    border: 1px solid var(--accent);
    color: var(--accent);
    font-size: 1rem;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: 0.25s;
  }

  .auth-section button:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(0,255,213,0.25);
  }

  /* ----------------------------
     CUSTOM DROPDOWN (NEON)
     ---------------------------- */
  .dropdown {
    width: 100%;
    position: relative;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 12px;
    padding: 12px 14px;
    cursor: pointer;
    color: var(--text);
    margin-bottom: 12px;
    transition: 0.2s;
  }

  .dropdown:hover {
    border-color: rgba(0,255,213,0.4);
    box-shadow: 0 0 14px rgba(0,255,213,0.15);
  }

  .dropdown-selected {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .dropdown-selected::after {
    content: "▾";
    color: var(--accent);
    font-size: 0.9rem;
  }

  .dropdown-menu {
    position: absolute;
    top: 105%;
    left: 0;
    width: 100%;
    max-height: 230px;
    overflow-y: auto;
    background: rgba(9, 16, 33, 0.92);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 12px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.5);
    backdrop-filter: blur(10px);
    z-index: 100;
    display: none;
    animation: fadeIn 0.15s ease-out;
  }

  .dropdown.open .dropdown-menu {
    display: block;
  }

  .dropdown-item {
    padding: 10px 14px;
    cursor: pointer;
    transition: 0.1s;
    color: #dce7ff;
  }

  .dropdown-item:hover {
    background: rgba(0,255,213,0.12);
    color: var(--accent);
  }

  .dropdown-item.active {
    background: rgba(138,47,255,0.18);
    color: #d8b8ff;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  </style>
</head>

<body>

<section class="auth-section">

  <!-- Google Sign-In -->
  <div id="g_id_onload"
       data-client_id="466885260272-86cp1p5tkpsspvrdp8n79h0gbfob48qq.apps.googleusercontent.com"
       data-context="signin"
       data-auto_select="true"
       data-itp_support="true"
       data-theme="filled_blue"
       data-text="signup_with">
  </div>

  <div class="g_id_signin"
       data-type="standard"
       data-theme="filled_blue"
       data-text="signup_with"></div>

  <p>or</p>

  <h2>Sign Up with CampusNotes</h2>

  <form id="loginForm" action="/register" method="POST">

    <input type="text" name="username" placeholder="Username" required />
    <input type="text" name="name" placeholder="Full Name" />
    <input type="email" name="email" placeholder="Email" id="emailInput" required />

    <!-- COURSE -->
    <div class="dropdown" data-name="course">
      <div class="dropdown-selected">Select Course</div>
      <div class="dropdown-menu">
        <div class="dropdown-item" data-value="B.Tech CSE">B.Tech CSE</div>
        <div class="dropdown-item" data-value="B.Tech IT">B.Tech IT</div>
        <div class="dropdown-item" data-value="B.Tech ECE">B.Tech ECE</div>
        <div class="dropdown-item" data-value="B.Tech ME">B.Tech ME</div>
        <div class="dropdown-item" data-value="MBA">MBA</div>
        <div class="dropdown-item" data-value="BBA">BBA</div>
        <div class="dropdown-item" data-value="MCA">MCA</div>
        <div class="dropdown-item" data-value="BCA">BCA</div>
      </div>
      <input type="hidden" name="course" id="course">
    </div>

    <!-- GENDER -->
    <div class="dropdown" data-name="gender">
      <div class="dropdown-selected">Select Gender</div>
      <div class="dropdown-menu">
        <div class="dropdown-item" data-value="He/Him">He/Him</div>
        <div class="dropdown-item" data-value="She/Her">She/Her</div>
        <div class="dropdown-item" data-value="They/Them">They/Them</div>
        <div class="dropdown-item" data-value="Other">Other</div>
      </div>
      <input type="hidden" name="gender" id="gender">
    </div>

    <input type="password" name="password" placeholder="Password" required />

    <button type="submit">Sign Up</button>
  </form>

</section>

<!-- Google Script -->
<script src="https://accounts.google.com/gsi/client" async></script>

<script>
  /* ---------- GOOGLE LOGIN ---------- */
  function decodeJWT(token) {
    let base64Url = token.split(".")[1];
    let base64 = base64Url.replace(/-/g, "+").replace(/_/g, "/");
    let jsonPayload = decodeURIComponent(
      atob(base64)
      .split("")
      .map(c => "%" + ("00" + c.charCodeAt(0).toString(16)).slice(-2))
      .join("")
    );
    return JSON.parse(jsonPayload);
  }

  function handleCredentialResponse(response) {
    fetch("/oauth2callback", {
      method: "POST",
      body: JSON.stringify({ credential: response.credential }),
      headers: { "Content-Type": "application/json" }
    }).then(res => res.json())
      .then(data => {
        if (data.success) window.location.href = "/explore";
      });
  }

  window.onload = function () {
    google.accounts.id.initialize({
      client_id: "466885260272-86cp1p5tkpsspvrdp8n79h0gbfob48qq.apps.googleusercontent.com",
      callback: handleCredentialResponse
    });
    google.accounts.id.renderButton(
      document.querySelector(".g_id_signin"),
      { theme: "outline", size: "large" }
    );
  };
</script>

<script>
  /* ---------- FORM VALIDATIONS ---------- */
  document.getElementById("loginForm").addEventListener("submit", function (e) {
    let emailField = document.getElementById("emailInput");
    let username = this.username.value.trim();
    let name = this.name.value.trim();
    let password = this.password.value;
    let course = this.course.value;
    let gender = this.gender.value;

    emailField.value = emailField.value.toLowerCase().trim();

    if (username.length < 3) {
      alert("⚠️ Username must be at least 3 characters.");
      e.preventDefault(); return;
    }

    if (name && !/^[a-zA-Z\s]+$/.test(name)) {
      alert("⚠️ Name can only contain letters and spaces.");
      e.preventDefault(); return;
    }

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(emailField.value)) {
      alert("⚠️ Invalid email address.");
      e.preventDefault(); return;
    }

    const passRegex = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d).{6,}$/;
    if (!passRegex.test(password)) {
      alert("⚠️ Password must have 1 uppercase, 1 lowercase & 1 number.");
      e.preventDefault(); return;
    }

    if (!course) {
      alert("⚠️ Please select your course.");
      e.preventDefault(); return;
    }

    if (!gender) {
      alert("⚠️ Please select your gender.");
      e.preventDefault(); return;
    }
  });
</script>

<script>
  /* ---------- CUSTOM DROPDOWN JS ---------- */
  document.querySelectorAll(".dropdown").forEach(drop => {

    const selected = drop.querySelector(".dropdown-selected");
    const menu = drop.querySelector(".dropdown-menu");
    const items = drop.querySelectorAll(".dropdown-item");
    const hidden = drop.querySelector("input[type='hidden']");

    selected.addEventListener("click", () => {
      drop.classList.toggle("open");
    });

    items.forEach(item => {
      item.addEventListener("click", () => {
        selected.innerHTML = item.textContent;
        hidden.value = item.dataset.value;

        items.forEach(i => i.classList.remove("active"));
        item.classList.add("active");

        drop.classList.remove("open");
      });
    });

  });

  document.addEventListener("click", e => {
    document.querySelectorAll(".dropdown.open").forEach(dd => {
      if (!dd.contains(e.target)) dd.classList.remove("open");
    });
  });
</script>

</body>
</html>
